#include <stdio.h>
int main() {
    int a = 10;
    float b = 5.5;
    char c = 'A';

    int *p1 = &a;
    float *p2 = &b;
    char *p3 = &c;

    printf("Original addresses:\n");
    printf("int pointer: %p\n", p1);
    printf("float pointer: %p\n", p2);
    printf("char pointer: %p\n\n", p3);

    p1++;
    p2++;
    p3++;

    printf("After increment:\n");
    printf("int pointer: %p\n", p1);
    printf("float pointer: %p\n", p2);
    printf("char pointer: %p\n\n", p3);

    p1--;
    p2--;
    p3--;

    printf("After decrement:\n");
    printf("int pointer: %p\n", p1);
    printf("float pointer: %p\n", p2);
    printf("char pointer: %p\n", p3);

    return 0;
}
