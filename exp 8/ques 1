#include <stdio.h>
int main() {
    int a = 10;
    float b = 5.5;
    char c = 'A';

    int *p1 = &a;
    float *p2 = &b;
    char *p3 = &c;

    printf("Value of a = %d, Address = %p, Pointer value = %p, Pointed value = %d\n", a, &a, p1, *p1);
    printf("Value of b = %.2f, Address = %p, Pointer value = %p, Pointed value = %.2f\n", b, &b, p2, *p2);
    printf("Value of c = %c, Address = %p, Pointer value = %p, Pointed value = %c\n", c, &c, p3, *p3);

    return 0;
}
