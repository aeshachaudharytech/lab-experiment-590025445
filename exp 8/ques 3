#include <stdio.h>

void modify(int *x, float *y, char *z) {
    *x = *x + 5;
    *y = *y * 2;
    *z = *z + 1;
}

int main() {
    int a = 10;
    float b = 5.5;
    char c = 'A';

    modify(&a, &b, &c);

    printf("After modification:\n");
    printf("a = %d\n", a);
    printf("b = %.2f\n", b);
    printf("c = %c\n", c);

    return 0;
}
