#include <stdio.h>

int main() {
    FILE *fp;                     

    fp = fopen("myfile.txt", "w");  

    if (fp == NULL) {
        printf("Error in creating file!");
        return 1;
    }

    fprintf(fp, "Hello, this is a new file.\n");
    fprintf(fp, "text is wriiten .");

    fclose(fp);   
    printf("File created with text in it!");

    return 0;
}
